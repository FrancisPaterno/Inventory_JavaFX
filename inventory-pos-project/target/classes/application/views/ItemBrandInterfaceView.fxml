<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="parentContainer" stylesheets="@../application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.ItemBrandInterfaceController">
   <left>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="14.0" layoutY="14.0" text="Brand *" />
            <TextField fx:id="txtBrand" layoutX="83.0" layoutY="14.0" />
            <Label layoutX="12.0" layoutY="48.0" text="Description" />
            <TextField fx:id="txtDescription" layoutX="83.0" layoutY="44.0" prefHeight="25.0" prefWidth="255.0" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </AnchorPane>
   </left>
   <bottom>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <JFXButton fx:id="btnOk" contentDisplay="GRAPHIC_ONLY" defaultButton="true">
               <graphic>
                  <FontAwesomeIconView glyphName="CHECK" size="20" />
               </graphic>
            </JFXButton>
            <JFXButton fx:id="btnCancel" cancelButton="true" contentDisplay="GRAPHIC_ONLY">
               <graphic>
                  <FontAwesomeIconView glyphName="TIMES" size="20" />
               </graphic>
            </JFXButton>
         </children>
      </HBox>
   </bottom>
</BorderPane>
